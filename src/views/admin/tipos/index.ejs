                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.DESTIP %></div>
                                  <div class="text-muted">
                                    <% if (element.ORGTIP === datos.origenTipo.formulario) { %>
                                      <small class="text-reset">Texto ayuda: <%- element.AYUTIP %></small>
                                    <% } %>
                                  </div>
                                </div>
                              </div>
                            </td>
                            <td class="text-end w-4">
                              <ul class="dots-menu">
                                <li class="nav-item drop-right">
                                  <a href="#" class="nav-link">
                                    <i class="bi bi-three-dots-vertical"></i>
                                  </a>
                                  <ul>
                                    <li class="nav-item">
                                      <a href="/admin/tipos/edit/<%- element.IDTIPO %>" class="nav-link">
                                        <i class="bi bi-pencil dropdown-item-icon"></i>Editar tipo
