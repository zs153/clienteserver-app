                      <div class="d-flex">
                        <div class="me-3">
                          <select class="form-select" id="cbotip" name="orgtip" value="">
                            <% datos.arrOrigenTipo.map(element => { %> 
                              <option value="<%- element.id %>" <%- element.id === parseInt(datos.tipo.orgtip) ? "selected" : "" %>><%= element.des %></option>
                              <% }) %> 
                            </select>
                        </div>

                        <div class="input-icon me-3">
