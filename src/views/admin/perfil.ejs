    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div id="tabs">
            <input type="radio" id="tab1" name="tabs" checked>
            <label for="tab1">Perfil</label>
            <input type="radio" id="tab2" name="tabs">
            <label for="tab2">Cambiar contraseña</label>
            <div id="perfil">
              <div class="card">
                <form action="/admin/usuarios/perfil" method="POST" onsubmit="return validate();">
                  <input type="hidden" name="idusua" id="idusua" value="<%- datos.usuario.idusua %>">
                  <div class="card-header">
                    Perfil
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-2">
                        <div class="mb-1">
                          <label class="form-label">UserID</label>
                          <input type="text" name="userid" id="userid" class="form-control" onkeyup="this.value = this.value.toLowerCase();" value="<%- datos.usuario.userid %>" readonly/>
                        </div>
                      </div>
                      <div class="col-10">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Nombre</label>
                            <input type="text" name="nomusu" id="nomusu" class="form-control" onkeyup="this.value = this.value.toUpperCase();" value="<%- datos.usuario.nomusu %>" autofocus/>
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-10">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Correo electrónico</label>
                            <input type="text" name="emausu" id="emausu" class="form-control" value="<%- datos.usuario.emausu %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                      <div class="col-2">
                        <div class="mb-1">
                          <div class="input-control">
                            <label class="form-label required">Teléfono</label>
                            <input type="text" name="telusu" id="telusu" class="form-control" value="<%- datos.usuario.telusu %>" />
                            <div class="invalid-feedback"></div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="mb-1">
                          <div class="form-label">Oficina</div>
                          <select class="form-select" id="cboofi" name="ofiusu" value="<%- datos.usuario.ofiusu %>">
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="card-footer text-end">
                    <div class="d-flex">
                      <a href="/admin" class="btn btn-link">Cancelar</a>
                      <button type="submit" class="btn btn-primary ms-auto" id="btnUpdate">Actualizar perfil</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div id="password">
              <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                  <div class="card">
                    <form action="/admin/change" method="POST" onsubmit="return validate();">
                      <input type="hidden" name="idusua" id="idusua" value="<%- datos.usuario.idusua %>">
                      <div class="card-header">
                        Contraseña
                      </div>
                      <div class="card-body">
                        <div class="mb-1">
                          <label class="form-label required">Nueva contraseña</label>
                          <span class="input-text">
                            <input
                            type="password"
                            name="pwdusu"
                            id="pwdusu"
                            class="form-control"
                            value=""
                            autocomplete="off"
                            autofocus
                            required
                            />                  
                            <i id="togglePassword" class="bi bi-eye-slash" style="margin-left: -30px; cursor: pointer;"></i>
                          </span>
                        </div>
                      </div>
                      <div class="card-footer text-end">
                        <div class="d-flex">
                          <a href="/admin" class="btn btn-link">Cancelar</a>
                          <button type="submit" class="btn btn-primary ms-auto" id="btnPassword">Actualizar contraseña</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
                <div class="col-3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="footer footer-transparent d-print-none">
