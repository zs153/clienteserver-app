      display: none;
    }
    #tabs label {
      display: inline-block;
      margin: 0;
      padding: 8px;
      font-weight: 500;
      color: #232e3c
    }
    #tabs label:before {
      font-family: Nunito;
      font-weight: normal;
      margin-right: 10px;
    }
    #tabs label:hover {
      color: #888;
      cursor: pointer;
    }
    #tabs input:checked + label {
      color: rgb(35,46,60,0.7);
      border-bottom: 2px solid #206bc4;
      /* width: 20%; */
    }
    #tab1:checked ~ #perfil,
    #tab2:checked ~ #password {
      display: block;
    }
  </style>
